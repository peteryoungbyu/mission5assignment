@{
    ViewData["Title"] = "Calc";
    ViewData["Page"] = "Calculator";
}
<h1>@ViewData["Page"]</h1>

<div class="card" style="max-width: 500px;">
    <div class="card-header">
        <h2>Tutor me in learning who the best athletes are</h2>
    </div>
    <div class="card-body">
        <form>
            <div class="form-group mb-3">
                <label for="txtHours">Hours Needed:</label>
                <input type="number" class="form-control" id="txtHours" placeholder="Enter number of hours" min="1">
                <span id="error-message" class="text-danger" style="display:none;">
                    Please enter a positive number greater than 0.
                </span>
            </div>

            <div class="form-group mb-3">
                <label for="txtRate">Hourly Rate:</label>
                <div class="input-group">
                    <span class="input-group-text">$</span>
                    <input type="text" class="form-control" id="txtRate" value="26.20" readonly>
                </div>
            </div>

            <button type="button" id="btnCalculate" class="btn btn-primary mb-3">Calculate Cost</button>

            <div class="form-group">
                <label for="txtTotal">Total Cost:</label>
                <div class="input-group">
                    <span class="input-group-text">$</span>
                    <input type="text" class="form-control" id="txtTotal" readonly>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    
    <script src="~/js/calculator.js"></script>
}